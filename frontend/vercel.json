{
  "version": 2,
  "routes": [
    {
      "src": "/start",  
      "dest": "https://bili-live-backend.onrender.com/start",  // 替换为您的Render后端地址
      "methods": ["POST"],  // 只代理POST请求
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Content-Type": "application/json"
      }
    }
  ],
  "headers": {
    "/*": {  // 通配符，适用于所有页面
      "Access-Control-Allow-Origin": "*",
      "Content-Security-Policy": "default-src 'self' unpkg.com; script-src 'unsafe-inline'"
    }
  }
}
